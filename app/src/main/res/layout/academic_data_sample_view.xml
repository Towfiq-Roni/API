<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/demo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/stdPName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABCD Jack"
        android:textSize="20sp"
        android:layout_toRightOf="@id/demo1"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/demo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student ID:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/demo1"
        />

    <TextView
        android:id="@+id/stdId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABCD Jack2"
        android:textSize="20sp"
        android:layout_toRightOf="@id/demo2"
        android:layout_alignBaseline="@id/demo2"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/demo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CGPA:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/demo2"
        />

    <TextView
        android:id="@+id/stdCgpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABCD Jack3"
        android:textSize="20sp"
        android:layout_toRightOf="@id/demo3"
        android:layout_alignBaseline="@id/demo3"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        />

</RelativeLayout>